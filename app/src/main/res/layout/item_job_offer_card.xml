<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardJobOffer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:strokeColor="@color/primary_color"
    app:strokeWidth="2dp"
    app:cardBackgroundColor="@android:color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layoutCardContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="14dp"
        android:background="@android:color/white">

        <ImageView
            android:id="@+id/iv_company_logo"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:contentDescription="Logo de l'entreprise"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@tools:sample/avatars"/>

        <TextView
            android:id="@+id/tv_job_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="8dp"
            android:textSize="16sp"
            android:textStyle="bold"
            android:maxLines="2"
            android:ellipsize="end"
            android:lineSpacingExtra="2dp"
            tools:text="Développeur Android Senior (Java/Kotlin)"
            app:layout_constraintTop_toTopOf="@id/iv_company_logo"
            app:layout_constraintStart_toEndOf="@id/iv_company_logo"
            app:layout_constraintEnd_toStartOf="@id/btn_save_job"/>

        <TextView
            android:id="@+id/tv_company_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:textSize="14sp"
            android:textColor="?android:attr/textColorSecondary"
            tools:text="Google Maroc Sàrl"
            app:layout_constraintTop_toBottomOf="@id/tv_job_title"
            app:layout_constraintStart_toStartOf="@id/tv_job_title"
            app:layout_constraintEnd_toEndOf="parent"/>

        <ImageView
            android:id="@+id/ic_location"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginTop="12dp"
            android:contentDescription="Localisation"
            app:tint="?android:attr/textColorSecondary"
            app:layout_constraintTop_toBottomOf="@id/iv_company_logo"
            app:layout_constraintStart_toStartOf="@id/iv_company_logo"/>

        <TextView
            android:id="@+id/tv_location_type"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:textSize="14sp"
            tools:text="Casablanca • CDI"
            app:layout_constraintTop_toTopOf="@id/ic_location"
            app:layout_constraintBottom_toBottomOf="@id/ic_location"
            app:layout_constraintStart_toEndOf="@id/ic_location"
            app:layout_constraintEnd_toEndOf="parent"/>

        <ImageButton
            android:id="@+id/btn_save_job"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:contentDescription="Enregistrer l'offre"
            android:padding="8dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>