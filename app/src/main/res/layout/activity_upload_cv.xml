<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_grey">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/primary_color"
            app:title="Ajouter un CV"
            app:titleTextColor="@android:color/white"
            app:navigationIcon="@drawable/ic_arrow_back" />

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Titre Field -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilTitre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Titre du CV *"
                app:boxBackgroundMode="outline"
                app:boxStrokeColor="@color/primary_color">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etTitre"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:maxLines="1" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Domaine Field -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilDomaine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:hint="Domaine (optionnel)"
                app:boxBackgroundMode="outline"
                app:boxStrokeColor="@color/primary_color">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etDomaine"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:maxLines="1" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Select File Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSelectFile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Sélectionner un fichier"
                android:textColor="@color/primary_color"
                app:icon="@drawable/ic_upload"
                app:iconGravity="textStart"
                style="@style/Widget.Material3.Button.OutlinedButton" />

            <!-- Selected File Display -->
            <LinearLayout
                android:id="@+id/layoutSelectedFile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="horizontal"
                android:padding="12dp"
                android:background="@drawable/bg_selected_file"
                android:visibility="gone">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_check_circle"
                    app:tint="@color/green"
                    android:contentDescription="Fichier sélectionné" />

                <TextView
                    android:id="@+id/tvSelectedFileName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="12dp"
                    android:textSize="14sp"
                    android:textColor="@color/primary_text" />

            </LinearLayout>

            <!-- Save Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSave"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="32dp"
                android:text="Enregistrer"
                android:textSize="16sp"
                android:enabled="false"
                app:cornerRadius="8dp" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
